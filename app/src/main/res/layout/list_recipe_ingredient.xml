<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="ingredient"
            type="com.umut.poele.model.Ingredient" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_ingredient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_between_same_elements"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="0dp"
        android:clickable="true"
        android:focusable="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/h_50_guideline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.45" />

            <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                android:id="@+id/card_image_ingredient"
                android:layout_width="@dimen/_36sdp"
                android:layout_height="@dimen/_36sdp"
                app:cardCornerRadius="@dimen/_18sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/image_ingredient"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:setImage="@{ingredient.imageId}"
                    tools:src="@drawable/coffee_beans" />


            </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

            <TextView
                android:id="@+id/text_ingredient_amount"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:text="@{@string/ingredient_amount(ingredient.amount, ingredient.unit)}"
                app:layout_constraintBottom_toBottomOf="@id/card_image_ingredient"
                app:layout_constraintEnd_toStartOf="@id/h_50_guideline"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/card_image_ingredient"
                app:layout_constraintTop_toTopOf="@id/card_image_ingredient"
                tools:text="125 gram" />

            <TextView
                android:id="@+id/text_ingredient_title"
                android:layout_width="@dimen/_160sdp"
                android:layout_height="wrap_content"
                android:text="@{ingredient.name}"
                app:layout_constraintBottom_toBottomOf="@id/card_image_ingredient"
                app:layout_constraintEnd_toStartOf="@id/image_add_shoplist"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/h_50_guideline"
                app:layout_constraintTop_toTopOf="@id/card_image_ingredient"
                tools:text="All-Purpose Flour" />

            <ImageView
                android:id="@+id/image_add_shoplist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/side_margin"
                android:src="@drawable/round_add_shopping_cart_24"
                app:layout_constraintBottom_toBottomOf="@id/card_image_ingredient"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/card_image_ingredient" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>
